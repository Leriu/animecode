<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6 centmar">
        <h2>Login</h2>
        <form action="/auth/login" method="POST" id="form-container">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>

          {{#if message }}
            <div class="error-message">{{ message }}</div>
          {{/if}}
          <button type="submit" class="btn btn-info btn-block">Login</button>
          <br>
          <p class="account-message">
            Don't have an account yet?
            <a href="/auth/signup" class="badge badge-dark">Signup</a>
          </p>
           <div class="form-group">
            <a href="#" class="badge badge-dark">Forgot your password?</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

