<section class="my-3 py-3">
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <div class="form-group">
              <h3 class="text-center">{{user.username}}</h3>
            </div>

            <div class="form-group">
              <img class="rounded-circle" src="/images/userspics/{{user.userimage}}" alt="{{user.username}}" width="140px" height="140px">
            </div>

            <div class="form-group text-center">
              <h4 class="text-center">Upload fanmanga</h4>
              <li class="click"><i class="fas fa-book-open fa-2x"></i></li>
            </div>

            <div class="form-group text-center">
              <p><a href="/mangas/createmanga" class="btn btn-info btn-block">Create manga</a></p>
            </div> 

            <div class="form-group text-center">
              <h4 class="text-center">Create meetpoint</h4>
              <li class="click"><i class="fas fa-map-marker-alt fa-2x"></i></li>
            </div>

            <div class="form-group text-center">
              <p><a href="/meetpoints/new" class="btn btn-info btn-block">Create meetpoint</a></p>
            </div>    

          </div>
        </div>
      </div>

      <div class="col-sm-9">
        <div class="card">
          <div class="card-body">
            <div id="accordion">
              <div class="card">
                <div class="card-header" id="headingOne">
                  <h5 class="mb-0">
                    <button disabled="disabled" class="btn btn-info collapsed" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                      <i class="fab fa-readme"></i>   Mis fanMangas
                    </button>
                  </h5>
                </div>

                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                  <div class="card-body">
                    <div class="container">
                      <div class="row justify-content-center">
                        {{#each mangas}}
                          {{#ifCond mangas.userid._id user.id}}

                          <div class="col-sm-4">
                            <div class="row">
                              <div class="col md 12">
                                <img src="/images/previewimages/{{this.img_preview}}" height="200px" width="150px">
                              </div>
                            </div>
                            <div class="row my-2">
                              <div class="col-md-12">
                                <a class="aprof" href="/mangas/{{this.id}}"><h5 class="text-center">{{this.manganame}}</h5></a>
                              </div>
                            </div>
                            <div class="row my-2">
                              <div class="col col-md-12 text-center">
                                <a class="btn btn-danger" href="/mangas/delete/{{id}}"> <i style="color:#ffffff !important" class="fas fa-trash-alt"></i> </a>
                              </div>
                            </div>
                          </div>
                          {{/ifCond}}
                        {{/each}}
                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
        </div>         
      </div>
  </div>
</div>
</section>
  


  
 
        

 
    

