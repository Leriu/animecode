<section class="my-3 py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100 hdef" src="https://pa1.narvii.com/6391/14f94ea5619477d207b87d3a67c38bd09a85f8dc_hq.gif" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100 hdef" src="https://dw9to29mmj727.cloudfront.net/properties/2016/245-SeriesThumbnailsManga_BAK_400x320.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100 hdef" src="/images/carrusel/carrusel-4.jpg" alt="Third slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100 hdef" src="https://media.giphy.com/media/pFhrdCSQRyRAQ/giphy.gif" alt="Four slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
      </div>
    </div>
  </div>
  
</section>
<br>
<section>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 class="text-center">"Disfruta de tus fanmangas favoritos"</h1>
        </div>
      </div>
      <div class="card-body">
        <div class="container">
          <div class="row">
            {{#each mangas}}
              <div class="col col-md-3">
                <img class="rounded" src="/images/previewimages/{{this.img_preview}}" width="200px" height="300px">
                <h5 class="text-center my-2 py-2" style="font-size: 1.7vh">{{this.manganame}}</h5>
                <a class="btn btn-info btn-block" href="/mangas/{{this.id}}">Details...</a>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
        
</section>
