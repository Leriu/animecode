{{{navbar}}}
<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100 hdef" src="https://pa1.narvii.com/6391/14f94ea5619477d207b87d3a67c38bd09a85f8dc_hq.gif" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100 hdef" src="https://dw9to29mmj727.cloudfront.net/properties/2016/245-SeriesThumbnailsManga_BAK_400x320.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100 hdef" src="http://sf.co.ua/2012/wallpaper-2026606.jpg" alt="Third slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100 hdef" src="https://media.giphy.com/media/pFhrdCSQRyRAQ/giphy.gif" alt="Four slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
      </div>
    </div>
  </div>
  
</section>
<br>
<section>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 class="text-center">"Disfruta de tus fanmangas favoritos"</h1>
        </div>
      </div>
      {{#each mangas}}
        <div class="row my-5">
          <div class="col col-md-4">
            <img class="featurette-image img-fluid mx-auto" data-src="holder.js/500x500/auto" alt="" src="/images/previewimages/{{this.img_preview}}" data-holder-rendered="true" style="width: 226px; height: 320px;">
          </div>

          <div class="col col-md-4">
            <div class="form-group">
              <h2 class="featurette-heading">"{{this.manganame}}"</h2>
            </div>
            <div class="form-group">
              <span class="card-title5"><i class="fa fa-user"></i>   Posted by : <i class="material-icons right">{{this.author}}</i></span>
            </div>
            <div class="form-group">
              <span class="card-title5"><i class="fa fa-user-circle"></i>  Translated by : <i class="material-icons right">{{this.traducedby}}</i></span>
            </div>
            <div class="form-group">
              <span class="card-title5"><i class="fa fa-calendar"></i>  Publication date : <i class="material-icons right"><br>{{this.created_at}}</i></span>
            </div>
            <br>
             <div class="form-group">
               <div class="col-md-3 col-md-offset-5">
                <a href="/manga/{{this._id}}" type="button" class="btn btn-secondary">Read more</a>
               </div>
            </div>
          </div>
        </div>
        {{/each}}
</section>
